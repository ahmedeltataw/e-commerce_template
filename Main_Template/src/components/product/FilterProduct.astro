          name="CateName"
          title="المساعده على الحركة"
          FormClassName="d-flex items-center justify-between pt-7"
          LabelClassName="fs-16"
          id="checkbox-10"
        />
        <FormGroup
          type="checkbox"
          isLabel={true}
          isDisabled={false}
          name="CateName"
          title="المساعدة داخل المنزل"
          FormClassName="d-flex items-center justify-between pt-7"
          LabelClassName="fs-16"
