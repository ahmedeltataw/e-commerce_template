---
import Button from "@components/ui/global/Button.astro";
import { Icon } from "astro-icon/components";
import FormGroup from "@components/ui/global/FormGroup.astro";
---

<aside class="filterProducts-1">
  <div class="d-flex items-center gap-5 responsiveFilterSearch mb-5">
    <Button
      type="button"
      ClassName="lg-d-none btn-run relative openFilter px-5 round-2 d-flex items-center"
      aria={`openFilter`}
      id="openFilter"
      ariaEx={`false`}
      controll={`accordionResponsive`}
    >
      <Icon name="filter" size={`28`} class={`relative `} />
      <span class="pr-2 relative">فلتر</span>
    </Button>
    <FormGroup
      type="text"
      FormClassName="relative searchFilterGroup "
      isDisabled={false}
      isLabel={false}
      place="ابحث عن منتجك"
      name="searchFilter"
      id="searchFilter"
      IsButton={{
        aria: "searchFilter",
        ClassName: "absolute searchFilter round-2 px-4",
        BtnIcon: { name: "search" },
      }}
      InputClassName="p-in-5 "
    />
  </div>
  <div class="accordion round-4 lg-max-d-none" id="accordionResponsive">
    <Button
      type="button"
      aria={`closeFilter`}
      ClassName="lg-d-none relative btn-run round-2 mb-10 "
      id="closeFilter"
      ariaEx={`false`}
      controll={`accordionResponsive`}
    >
      <Icon name="close" size={`28`} class={`relative mx-auto py-4`} />
    </Button>
    <!-- item-1 -->
    <div class="accordionItem border-1 border-solid round-t-2">
      <Button
        type="button"
        aria={`arrow-down`}
        ClassName="d-flex items-center justify-between fs-18  py-7 px-6 round-t-2  "
        ariaEx={false}
        controll={``}
      >
        ترتيب
        <Icon name={`arrow-down`} size={`28`} />
      </Button>
      <div class="accordionContent px-5">
        <FormGroup
          type="radio"
          isLabel={true}
          isDisabled={false}
          name="sort"
          title="الاكثر مبيعا"
          FormClassName="d-flex items-center justify-between pt-7"
          LabelClassName="fs-16"
          id="radio1"
        />
        <FormGroup
          type="radio"
          isLabel={true}
          isDisabled={false}
          name="sort"
          title="السعر اقل اعلي"
          FormClassName="d-flex items-center justify-between pt-7"
          LabelClassName="fs-16"
          id="radio2"
        />
        <FormGroup
          type="radio"
          isLabel={true}
          isDisabled={false}
          name="sort"
          title="السعر اعلي اقل"
          FormClassName="d-flex items-center justify-between pt-7"
          LabelClassName="fs-16"
          id="radio3"
        />
      </div>
    </div>
    <!--  -->
    <!-- item-2 -->
    <div class="accordionItem border-1 border-solid border-t-0 border-b-0">
      <Button
        type="button"
        aria={`arrow-down`}
        ClassName="d-flex items-center justify-between fs-18 py-7 px-6  active"
        ariaEx={false}
        controll={``}
      >
        الاقسام الرئيسية
        <Icon name={`arrow-down`} size={`28`} />
      </Button>
      <div class="accordionContent px-5">
        <FormGroup
          type="checkbox"
          isLabel={true}
          isDisabled={false}
          name="All"
          title="الكل"
          FormClassName="d-flex items-center justify-between pt-7"
          LabelClassName="fs-16"
          id="checkbox-1"
        />
        <FormGroup
          type="checkbox"
          isLabel={true}
          isDisabled={false}
          name="CateName"
          title="المشدات والجبائر"
          FormClassName="d-flex items-center justify-between pt-7"
