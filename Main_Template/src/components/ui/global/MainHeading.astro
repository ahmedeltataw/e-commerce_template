---
interface Props {
  title: string;
  swiperBtn?: boolean;
  Show?: boolean;
}
const { title, swiperBtn = false, Show = true } = Astro.props;
---

{
  Show && (
    <div class="mainHeading mb-9 relative">
      <h2 class=" fw-500 relative round-t-6 px-8 pb-6 pt-4 d-inline-block">
        {title}
      </h2>
      {swiperBtn && (
        <div class="swiperBtn ">
          <div class="swiper-button-next  round-t-6" />
          <div class="swiper-button-prev round-t-6" />
        </div>
      )}
    </div>
  )
}
