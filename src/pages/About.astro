---
import Layout from "../layouts/Layout.astro";
import "@styles/scss/pages/About.scss";
// components
import SmallBeadcrumb from "@components/ui/global/SmallBeadcrumb.astro";
import AboutSection from "@components/About/AboutSection.astro";
import Img from "@assets/images/About/about-1.jpg";
import Img2 from "@assets/images/About/about-2.jpg";
import Img3 from "@assets/images/About/about-3.jpg";
---

<Layout
  title="jadwal |   من نحن"
  des="  متجر متخصص في توفير جميع الأدوات والمستلزمات الطبية بأعلى جودة وأسعار تنافسية، لتلبية احتياجات المستشفيات والعيادات والأفراد مع خدمة توصيل سريعة ودعم فني متواصل. "
>
  <SmallBeadcrumb defaultPage="الرئيسية" linkPage="من نحن" />
  <AboutSection
    title="تعرّف علينا "
    ClassName="knowMe"
    img={Img}
    des="مؤسسة Jadwal العالي التجارية هي مؤسسة متخصصة في توفير الأدوات والمعدات الطبية والرياضية المنزلية، بالإضافة إلى مستحضرات التجميل، ومستلزمات العناية الشخصية اليومية، ومعدات مراكز وأقسام العلاج الطبيعي، والتأهيل الرياضي، والعلاج المائي، ومعدات مراكز الرعاية النهارية. في مؤسسة Jadwal العالي التجارية نضع خبراتنا وخدماتنا بين أيدي عملائنا ونعطيهم كل الاهتمام والرعاية، حيث نوفر خدمة توصيل جميع المنتجات إلى المنازل سواء من خلال مندوبينا الخاصين أو من خلال شراكتنا مع شركات الشحن، مع تدريب المريض وأسرته على استخدام الأدوات والمعدات الطبية، لتكون امتداداً للرعاية المقدمة في المستشفيات، وبالتنسيق مع الجهات المعنية بالرعاية الصحية المنزلية، في مختلف القطاعات الحكومية والخاصة والجمعيات الخيرية. كما تسعى مؤسسة Jadwal العالي التجارية إلى تحسين جودة حياة المرضى وكبار السن وذوي الإعاقة أينما كانوا، حيث تغطي خدماتنا كافة المدن والقرى في المملكة العربية السعودية."
  />
  
  <AboutSection
    title=" رؤيتنا "
    ClassName="knowMe-1"
    img={Img2}
   des="برز في بناء مجتمع صحي منزلي من خلال توفير المستلزمات الطبية والألعاب الرياضية ومستحضرات التجميل، وتجهيزات مراكز الرعاية النهارية وتجهيزات الرعاية الطبيعية تتعاون مع شركائنا في إيصال خدماتنا في الرعاية الصحية المنزلية لكل مكان، من خلال تقديم المعدات والمستلزمات الطبية والأدوات المساعدة في الحياة اليومية، وتدريب أسماء المرضى وذويهم، مع ضمان الجودة المتميزة، ونمط الحياة الصحي الذي سيما وأن المملكة العربية السعودية 2030."
  />
  <AboutSection
    title=" رسالتنا "
    ClassName="knowMe"
    img={Img3}
    des="نؤمن نحن مؤسسة Jadwal العالى للتجارة بان صحة المجتمع نبدأ من صحة افراده الذين يتكون منهم وان كل الفرق المجتع يجب عليهم ان يعملوا نحو تحقيق هذا الهدف ونحن نعمل على تقديم التميز الصحي المتميز لكل متميز، وتوفير المعدات والمستلزمات الطبية وتجهيزات مراكز الرعاية النهارية والتجهيزات العلاجية توفير مستحضرات التجميل الطبيعية وفق أعلى معايير الجودة."
  />
</Layout>
