---
import { Image } from "astro:assets"
interface Props {
    img:string | any
}
const {img} = Astro.props
---
<div class="uploadImg mb-8 relative border-4 border-dashed p-2 m-in-auto">
    <Image src={img} alt="userPhoto" id={`userPhoto`} quality={70} class={`img-contain`} />
    <label for="uploadUserPhoto" class="absolute"></label>
    <input type="file" name="uploadUserPhoto" id="uploadUserPhoto" class="d-none" >
</div>